<section class="login flex justify-center pt-18">
    <div class="flex items-center">
        <div class="px-8 py-6  text-left bg-white shadow-lg">
            <h3 class="text-2xl font-bold text-center">Register</h3>
            <form action="/register" method="post">
                <%if(messages.error){%>
                <span class="text-red-500 text-small"><%= messages.error %></span>
                <% } %>
                <div class="mt-4">
                    <div>
                        <label class="block" for="Name">Name<label>
                                <input name = 'name' value= '<%= messages.name %>' id="name" type="text" placeholder="Enter Your Name"
                                    class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block" for="email">Email<label>
                                <input name = 'email' value= '<%= messages.email %>'  id="username" type="email" placeholder="Enter Your Email"
                                    class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="mt-4">
                        <label class="block">Password<label>
                                <input name = 'password'  type="password" placeholder="Password"
                                    class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600">
                    </div>
                    <div class="flex items-baseline justify-between">
                        <button type="submit"
                        class="btn-primary px-6 py-2 mt-4 text-white rounded-full ">
                        Register</button>
                        <a href="/login" class="text-sm text-blue-600 hover:underline font-bold inline-block">Already have Account?</a>
                    </div>
                </div>
            </form>
            <p class="text-center text-gray-500 text-xs pt-4">
                &copy; 2022 Food Delivery. All right reserved 
            </p>
        </div>
    </div>
</section>