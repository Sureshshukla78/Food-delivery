<section class="hero py-12">
    <div class="container mx-auto px-8 flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are You Hungry?</em><h6>
            <h1 class="text-3xl md:text-6xl">Don't Wait!</h1>
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="px-8 text-xl font-bold mb-8">All Pizzas</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% menu.forEach(function(data){ %>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= data.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= data.name %></h2>
                    <span class=" size py-1 px-4 rounded-full uppercase text-xs"><%= data.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= data.price %></span>
                        <button data-item="<%= JSON.stringify(data) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
        
    </div>
</section>